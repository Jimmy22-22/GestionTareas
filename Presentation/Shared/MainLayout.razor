@inherits LayoutComponentBase

<PageTitle>GestionTareas</PageTitle>

<div class="layout">
    <header class="top-bar">
        <h2><i class="bi bi-kanban-fill"></i> GestionTareas</h2>
    </header>

    <main class="body-content">
        @Body
    </main>

    <footer class="bottom-nav">
        <NavLink class="nav-link" href="/usuarios" Match="NavLinkMatch.Prefix">
            <i class="bi bi-people-fill icono-nav"></i>
            <span>Usuarios</span>
        </NavLink>

        <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">
            <i class="bi bi-check2-square icono-nav"></i>
            <span>Tareas</span>
        </NavLink>

        <NavLink class="nav-link" href="/proyectos" Match="NavLinkMatch.Prefix">
            <i class="bi bi-folder-fill icono-nav"></i>
            <span>Proyectos</span>
        </NavLink>

        <NavLink class="nav-link" href="https://github.com/Jimmy22-22/GestionTareas.git" target="_blank">
            <i class="fab fa-github icono-nav"></i>
            <span>GitHub</span>
        </NavLink>
    </footer>
</div>

<style>
    :root {
        --fondo-oscuro: #121212;
        --panel-claro: #1f1f1f;
        --acento-violeta: #7c4dff;
        --texto: #eeeeee;
    }

    .layout {
        display: flex;
        flex-direction: column;
        height: 100vh;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: var(--fondo-oscuro);
        color: var(--texto);
    }

    .top-bar {
        background-color: #000000;
        color: white;
        padding: 1rem 2rem;
        text-align: center;
        box-shadow: 0 3px 6px rgba(0, 0, 0, 0.5);
    }

        .top-bar h2 {
            margin: 0;
            font-size: 1.4rem;
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 10px;
        }

    .body-content {
        flex-grow: 1;
        padding: 2rem;
        margin: 1rem;
        background-color: var(--panel-claro);
        border-radius: 12px;
        overflow-y: auto;
        box-shadow: 0 6px 10px rgba(0, 0, 0, 0.4);
    }

    .bottom-nav {
        display: flex;
        justify-content: space-around;
        background-color: #000000;
        padding: 0.75rem 0;
        border-top: 1px solid #333;
    }

        .bottom-nav .nav-link {
            color: #bbbbbb;
            text-decoration: none;
            text-align: center;
            font-size: 0.9rem;
            transition: all 0.3s ease;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 0.5rem;
            border-radius: 10px;
        }

            .bottom-nav .nav-link:hover,
            .bottom-nav .nav-link.active {
                color: var(--acento-violeta);
                background-color: rgba(124, 77, 255, 0.1);
                box-shadow: 0 4px 10px rgba(124, 77, 255, 0.4);
            }

            .bottom-nav .nav-link i.icono-nav {
                font-size: 1.5rem;
                margin-bottom: 4px;
            }

    @@media (max-width: 768px) {
        .body-content

    {
        padding: 1rem;
    }

    .bottom-nav {
        font-size: 0.85rem;
    }

        .bottom-nav .nav-link i.icono-nav {
            font-size: 1.3rem;
        }

    }
</style>
