@inherits LayoutComponentBase

<PageTitle>GestionTareas</PageTitle>

<div class="layout">
    <main class="body-content">
        @Body
    </main>

    <footer class="bottom-nav">
        <NavLink class="nav-link" href="/usuarios">
            <i class="bi bi-people-fill"></i><span>Usuarios</span>
        </NavLink>

        <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">
            <i class="bi bi-check2-square"></i><span>Tareas</span>
        </NavLink>
        <NavLink class="nav-link" href="https://github.com/" target="_blank">
            <i class="fab fa-github"></i><span>GitHub</span>
        </NavLink>
    </footer>
</div>

<style>
    .layout {
        display: flex;
        flex-direction: column;
        height: 100vh;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f2f4f8;
    }

    .body-content {
        flex-grow: 1;
        padding: 2rem;
        overflow-y: auto;
    }

    .bottom-nav {
        display: flex;
        justify-content: space-around;
        background-color: #2d3436;
        padding: 10px 0;
        border-top: 2px solid #636e72;
    }

        .bottom-nav .nav-link {
            color: #dfe6e9;
            text-decoration: none;
            text-align: center;
            font-size: 0.95rem;
            transition: color 0.3s ease;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

            .bottom-nav .nav-link:hover,
            .bottom-nav .nav-link.active {
                color: #00cec9;
            }

            .bottom-nav .nav-link i {
                font-size: 1.3rem;
                margin-bottom: 4px;
            }

    @@media (max-width: 768px) {
        .body-content

    {
        padding: 1rem;
    }

    .bottom-nav {
        font-size: 0.9rem;
    }

        .bottom-nav .nav-link i {
            font-size: 1.1rem;
        }

    }
</style>
