@page "/tareas/read/{Id:int}"
@inject TareaService TareaService
@inject NavigationManager Navigation

<h3 class="titulo-detalles">
    <i class="bi bi-eye-fill icono-titulo"></i> Detalles de Tarea
</h3>

@if (tarea != null)
{
    <div class="tarjeta-detalles p-4 shadow-sm">
        <h5 class="titulo-tarjeta"><i class="bi bi-card-text icono-titulo-tarjeta"></i> @tarea.Titulo</h5>
        <p class="texto-detalles">
            <strong>Descripción:</strong> @tarea.Descripcion
        </p>
        <p class="texto-detalles">
            <strong>Fecha Límite:</strong> @tarea.FechaLimite.ToString("dd/MM/yyyy")
        </p>
        <p class="texto-detalles">
            <strong>Usuario Asignado:</strong> @tarea.Usuario?.Nombre
        </p>
        <p class="texto-detalles">
            <strong>Estado:</strong> @(tarea.Completada ? "✅ Completada" : "❌ Pendiente")
        </p>

        <div class="botones-accion mt-3">
            <a href="/" class="btn-volver">
                <i class="bi bi-arrow-left icono-boton"></i> Volver
            </a>
            <a class="btn-editar ms-2" href="/tareas/edit/@tarea.Id">
                <i class="bi bi-pencil-square icono-boton"></i> Editar
            </a>
        </div>
    </div>
}
else
{
    <p class="mensaje-cargando">Cargando tarea...</p>
}

<style>
    .titulo-detalles {
        text-align: center;
        font-size: 1.5rem;
        font-weight: bold;
        color: #333;
        margin-bottom: 1.5rem;
    }

    .icono-titulo {
        color: #0d6efd;
        margin-right: 0.5rem;
    }

    .tarjeta-detalles {
        max-width: 500px;
        margin: 0 auto;
        background: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1), 0 1px 3px rgba(0, 0, 0, 0.06);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .titulo-tarjeta {
        font-size: 1.2rem;
        font-weight: bold;
        color: #333;
        margin-bottom: 1rem;
    }

    .icono-titulo-tarjeta {
        color: #0d6efd;
        margin-right: 0.5rem;
    }

    .texto-detalles {
        font-size: 0.9rem;
        color: #555;
        margin-bottom: 0.75rem;
    }

    .botones-accion {
        display: flex;
        gap: 1rem;
    }

    .btn-volver {
        padding: 0.75rem 1.5rem;
        background-color: #6c757d;
        color: #fff;
        font-size: 1rem;
        font-weight: bold;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .btn-volver:hover {
        background-color: #5a6268;
    }

    .btn-editar {
        padding: 0.75rem 1.5rem;
        background-color: #0d6efd;
        color: #fff;
        font-size: 1rem;
        font-weight: bold;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .btn-editar:hover {
        background-color: #0b5ed7;
    }

    .icono-boton {
        margin-right: 0.5rem;
    }

    .mensaje-cargando {
        text-align: center;
        font-size: 1rem;
        color: #555;
    }
</style>

@code {
    [Parameter] public int Id { get; set; }
    private Tarea? tarea;

    protected override async Task OnInitializedAsync()
    {
        tarea = await TareaService.ObtenerPorId(Id);
    }
}
