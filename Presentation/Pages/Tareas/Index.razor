@page "/"
@inject TareaService TareaService

<h3 class="titulo">
    <i class="bi bi-card-list icono-titulo"></i> Lista de Tareas
</h3>

<a class="btn-nueva-tarea mb-3" href="/tareas/create">
    <i class="bi bi-plus-circle icono-boton"></i> Nueva Tarea
</a>

<table class="tabla-tareas">
    <thead>
        <tr>
            <th>Título</th>
            <th>Usuario</th>
            <th>Fecha Límite</th>
            <th>Completada</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in listaTareas)
        {
            <tr class="fila-tarea @(t.Completada ? "completada" : "")">
                <td>@t.Titulo</td>
                <td>@t.Usuario?.Nombre</td>
                <td>@t.FechaLimite.ToShortDateString()</td>
                <td>@(t.Completada ? "✅" : "❌")</td>
                <td>
                    <a class="btn btn-accion ver" href="/tareas/read/@t.Id">
                        <i class="bi bi-eye-fill"></i>
                    </a>
                    <a class="btn btn-accion editar" href="/tareas/edit/@t.Id">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a class="btn btn-accion eliminar" href="/tareas/delete/@t.Id">
                        <i class="bi bi-trash3-fill"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .titulo {
        text-align: center;
        font-size: 1.7rem;
        font-weight: 600;
        color: #e0e0e0;
        margin-bottom: 1.5rem;
    }

    .icono-titulo {
        color: #7c4dff;
        margin-right: 0.6rem;
    }

    .btn-nueva-tarea {
        display: inline-block;
        background-color: #7c4dff;
        color: white;
        padding: 0.6rem 1.5rem;
        border-radius: 999px;
        font-weight: bold;
        text-decoration: none;
        font-size: 1rem;
        transition: background-color 0.3s ease, transform 0.2s ease, box-shadow 0.3s ease;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

        .btn-nueva-tarea:hover {
            background-color: #9575cd;
            transform: scale(1.05);
        }

    .icono-boton {
        margin-right: 6px;
    }

    .tabla-tareas {
        width: 100%;
        border-collapse: collapse;
        font-family: 'Segoe UI', sans-serif;
        background-color: #1e1e1e;
        border-radius: 10px;
        overflow: hidden;
    }

        .tabla-tareas thead {
            background-color: #2c2c2c;
            color: #ccc;
        }

        .tabla-tareas th, .tabla-tareas td {
            padding: 0.9rem;
            font-size: 0.95rem;
            text-align: left;
            border-bottom: 1px solid #333;
        }

        .tabla-tareas tbody tr {
            transition: background-color 0.3s ease;
        }

            .tabla-tareas tbody tr:hover {
                background-color: #2a2a2a;
            }

    .fila-tarea.completada {
        background-color: #292b2f;
        color: #888;
        text-decoration: line-through;
    }

    .btn-accion {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 0.5rem 1.1rem;
        font-size: 0.85rem;
        font-weight: 600;
        border-radius: 999px;
        margin-right: 6px;
        text-decoration: none;
        color: white;
        transition: transform 0.2s ease, box-shadow 0.3s ease;
        box-shadow: 0 3px 6px rgba(0, 0, 0, 0.25);
        gap: 0.4rem;
    }

        .btn-accion:hover {
            transform: scale(1.08);
            box-shadow: 0 5px 12px rgba(0, 0, 0, 0.35);
        }

        .btn-accion.ver {
            background-color: #5c6bc0;
        }

        .btn-accion.editar {
            background-color: #fbc02d;
            color: #000;
        }

        .btn-accion.eliminar {
            background-color: #e53935;
        }
</style>

@code {
    private List<Tarea> listaTareas = new();

    protected override async Task OnInitializedAsync()
    {
        listaTareas = await TareaService.ObtenerTodas();
    }
}
