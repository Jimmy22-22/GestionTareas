@page "/"
@inject TareaService TareaService

<h3 class="titulo">
    <i class="bi bi-card-list icono-titulo"></i> Lista de Tareas
</h3>

<a class="btn-nueva-tarea mb-3" href="/tareas/create">
    <i class="bi bi-plus-circle-fill icono-boton"></i> Nueva Tarea
</a>

<table class="tabla-tareas">
    <thead>
        <tr>
            <th>Título</th>
            <th>Usuario</th>
            <th>Fecha Límite</th>
            <th>Completada</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in listaTareas)
        {
            <tr class="fila-tarea @(t.Completada ? "completada" : "")">
                <td>@t.Titulo</td>
                <td>@t.Usuario?.Nombre</td>
                <td>@t.FechaLimite.ToShortDateString()</td>
                <td>@(t.Completada ? "✅" : "❌")</td>
                <td>
                    <a class="btn btn-info btn-sm me-1" href="/tareas/read/@t.Id">
                        <i class="bi bi-eye-fill"></i>
                    </a>
                    <a class="btn btn-warning btn-sm me-1" href="/tareas/edit/@t.Id">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a class="btn btn-danger btn-sm" href="/tareas/delete/@t.Id">
                        <i class="bi bi-trash3-fill"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    /* Estilo general */
    .titulo {
        text-align: center;
        font-size: 1.5rem;
        font-weight: bold;
        color: #333;
        margin-bottom: 1.5rem;
    }

    .icono-titulo {
        color: #4caf50;
        margin-right: 0.5rem;
    }

    /* Botón "Nueva Tarea" */
    .btn-nueva-tarea {
        display: inline-block;
        padding: 0.75rem 1.5rem;
        background-color: #4caf50;
        color: #fff;
        font-size: 0.9rem;
        font-weight: bold;
        border: none;
        border-radius: 8px;
        text-decoration: none;
        transition: background-color 0.3s ease, transform 0.3s ease;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1), 0 1px 3px rgba(0, 0, 0, 0.06);
    }

        .btn-nueva-tarea:hover {
            background-color: #45a049;
            transform: scale(1.05);
        }

    .icono-boton {
        margin-right: 0.5rem;
    }

    /* Estilo de la tabla */
    .tabla-tareas {
        width: 100%;
        border-collapse: collapse;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin-bottom: 2rem;
    }

        .tabla-tareas thead {
            background-color: #4caf50;
            color: #fff;
            text-align: left;
        }

        .tabla-tareas th {
            padding: 1rem;
            font-size: 0.9rem;
            font-weight: bold;
        }

        .tabla-tareas tbody tr {
            transition: background-color 0.3s ease;
        }

            .tabla-tareas tbody tr:hover {
                background-color: #f0f8ff;
            }

        .tabla-tareas td {
            padding: 0.75rem;
            font-size: 0.9rem;
            border-bottom: 1px solid #ddd;
        }

    /* Estilo para tareas completadas */
    .fila-tarea.completada {
        background-color: #e8f5e9;
        text-decoration: line-through;
        color: #666;
    }

    /* Estilo de los botones de acción */
    .btn-info,
    .btn-warning,
    .btn-danger {
        padding: 0.25rem 0.5rem;
        font-size: 0.8rem;
        border-radius: 5px;
        transition: transform 0.3s ease;
    }

        .btn-info:hover,
        .btn-warning:hover,
        .btn-danger:hover {
            transform: scale(1.1);
        }
</style>

@code {
    private List<Tarea> listaTareas = new();

    protected override async Task OnInitializedAsync()
    {
        listaTareas = await TareaService.ObtenerTodas();
    }
}
