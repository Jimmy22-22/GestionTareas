@page "/tareas/delete/{Id:int}"
@inject TareaService TareaService
@inject NavigationManager Navigation

<h3 class="titulo-eliminar">
    <i class="bi bi-trash3-fill icono-titulo"></i> Eliminar Tarea
</h3>

<p class="mensaje-confirmacion">
    ¿Estás seguro que deseas eliminar esta tarea?
</p>

<div class="botones-accion">
    <button class="btn-eliminar me-2" @onclick="Eliminar">
        <i class="bi bi-trash-fill icono-boton"></i> Sí, eliminar
    </button>

    <button class="btn-cancelar" @onclick="Cancelar">
        <i class="bi bi-x-circle icono-boton"></i> Cancelar
    </button>
</div>

<style>
    .titulo-eliminar {
        text-align: center;
        font-size: 1.6rem;
        font-weight: bold;
        color: #dc3545;
        margin-bottom: 1.5rem;
    }

    .icono-titulo {
        color: #dc3545;
        margin-right: 0.5rem;
    }

    .mensaje-confirmacion {
        text-align: center;
        font-size: 1rem;
        color: #555;
        margin-bottom: 2rem;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .botones-accion {
        display: flex;
        justify-content: center;
        gap: 1rem;
    }

    .btn-eliminar,
    .btn-cancelar {
        padding: 0.75rem 1.5rem;
        font-size: 1rem;
        font-weight: bold;
        border-radius: 8px;
        color: #fff;
        border: none;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        transition: background-color 0.3s ease;
    }

    .btn-eliminar {
        background-color: #dc3545;
    }

        .btn-eliminar:hover {
            background-color: #c82333;
        }

    .btn-cancelar {
        background-color: #6c757d;
    }

        .btn-cancelar:hover {
            background-color: #5a6268;
        }

    .icono-boton {
        margin-right: 0.5rem;
    }
</style>

@code {
    [Parameter] public int Id { get; set; }

    private async Task Eliminar()
    {
        await TareaService.Eliminar(Id);
        Navigation.NavigateTo("/");
    }

    private void Cancelar()
    {
        Navigation.NavigateTo("/");
    }
}
