@page "/tareas/delete/{Id:int}"
@inject TareaService TareaService
@inject NavigationManager Navigation

<h3 class="text-danger"><i class="bi bi-trash3-fill"></i> Eliminar Tarea</h3>

<p>¿Estás seguro que deseas eliminar esta tarea?</p>

<button class="btn btn-danger me-2" @onclick="Eliminar">
    <i class="bi bi-trash-fill"></i> Sí, eliminar
</button>

<button class="btn btn-secondary" @onclick="Cancelar">
    <i class="bi bi-x-circle"></i> Cancelar
</button>

@code {
    [Parameter] public int Id { get; set; }

    private async Task Eliminar()
    {
        await TareaService.Eliminar(Id);
        Navigation.NavigateTo("/");
    }

    private void Cancelar()
    {
        Navigation.NavigateTo("/");
    }
}
