@page "/usuarios/create"
@inject UsuarioService UsuarioService
@inject NavigationManager Navigation

<h3 class="titulo-formulario">
    <i class="bi bi-person-plus-fill icono-titulo"></i> Crear Usuario
</h3>

<EditForm Model="nuevoUsuario" OnValidSubmit="CrearUsuario" class="formulario-nueva-entidad">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label class="etiqueta">Nombre:</label>
        <InputText class="input-text form-control" @bind-Value="nuevoUsuario.Nombre" placeholder="Nombre del usuario..." />
    </div>

    <div class="form-group">
        <label class="etiqueta">Correo:</label>
        <InputText class="input-text form-control" @bind-Value="nuevoUsuario.Correo" placeholder="Correo del usuario..." />
    </div>

    <button class="btn-crear mt-3" type="submit">
        <i class="bi bi-person-check-fill icono-boton"></i> Guardar Usuario
    </button>
</EditForm>

<style>
    .formulario-nueva-entidad {
        max-width: 500px;
        margin: 0 auto;
        padding: 2rem;
        background: #1e1e1e;
        border-radius: 12px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.4);
        font-family: 'Segoe UI', sans-serif;
        color: #f0f0f0;
    }

    .titulo-formulario {
        text-align: center;
        font-size: 1.7rem;
        font-weight: 600;
        color: #eeeeee;
        margin-bottom: 1.5rem;
    }

    .icono-titulo {
        color: #7c4dff;
        margin-right: 0.6rem;
    }

    .etiqueta {
        font-size: 0.95rem;
        color: #ccc;
        margin-bottom: 0.4rem;
        display: block;
    }

    .input-text {
        width: 100%;
        padding: 0.75rem;
        background-color: #2a2a2a;
        color: #f0f0f0;
        border: 1px solid #444;
        border-radius: 8px;
        font-size: 0.9rem;
        transition: border-color 0.3s ease;
    }

        .input-text:focus {
            border-color: #7c4dff;
            outline: none;
        }

    .btn-crear {
        width: 100%;
        padding: 0.8rem;
        background-color: #7c4dff;
        color: white;
        font-size: 1rem;
        font-weight: bold;
        border: none;
        border-radius: 10px;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .btn-crear:hover {
            background-color: #9575cd;
            transform: scale(1.03);
        }

    .icono-boton {
        margin-right: 0.5rem;
    }
</style>

@code {
    private Usuario nuevoUsuario = new();

    private async Task CrearUsuario()
    {
        await UsuarioService.Crear(nuevoUsuario);
        Navigation.NavigateTo("/usuarios");
    }
}
