@page "/usuarios/read/{Id:int}"
@inject UsuarioService UsuarioService
@inject NavigationManager Navigation

<h3 class="titulo-detalles">
    <i class="bi bi-eye-fill icono-titulo"></i> Detalles del Usuario
</h3>

@if (usuario != null)
{
    <div class="tarjeta-detalles p-4 shadow-sm">
        <h5 class="titulo-tarjeta">
            <i class="bi bi-person-fill icono-titulo-tarjeta"></i> @usuario.Nombre
        </h5>
        <p class="texto-detalles"><strong>Correo:</strong> @usuario.Correo</p>

        <div class="botones-accion mt-3">
            <a href="/usuarios" class="btn-volver">
                <i class="bi bi-arrow-left icono-boton"></i> Volver
            </a>
            <a class="btn-editar ms-2" href="/usuarios/edit/@usuario.Id">
                <i class="bi bi-pencil icono-boton"></i> Editar
            </a>
        </div>
    </div>
}
else
{
    <p class="mensaje-cargando">
        <i class="bi bi-hourglass-split"></i> Cargando usuario...
    </p>
}

<style>
    .titulo-detalles {
        text-align: center;
        font-size: 1.6rem;
        font-weight: bold;
        color: #6c63ff;
        margin-bottom: 1.5rem;
    }

    .icono-titulo {
        color: #6c63ff;
        margin-right: 0.5rem;
    }

    .tarjeta-detalles {
        max-width: 500px;
        margin: 0 auto;
        background: #171515;
        border-radius: 12px;
        padding: 2rem;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.4);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #f0f0f0;
    }

    .titulo-tarjeta {
        font-size: 1.3rem;
        font-weight: bold;
        color: #ffffff;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
    }

    .icono-titulo-tarjeta {
        color: #6c63ff;
        margin-right: 0.5rem;
        font-size: 1.4rem;
    }

    .texto-detalles {
        font-size: 0.95rem;
        color: #cccccc;
        margin-bottom: 0.75rem;
    }

    .botones-accion {
        display: flex;
        justify-content: flex-end;
        gap: 1rem;
    }

    .btn-volver, .btn-editar {
        padding: 0.65rem 1.2rem;
        font-size: 0.95rem;
        font-weight: bold;
        border-radius: 8px;
        color: #fff;
        border: none;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        transition: background-color 0.3s ease;
        text-decoration: none;
    }

    .btn-volver {
        background-color: #6c757d;
    }

        .btn-volver:hover {
            background-color: #5a6268;
        }

    .btn-editar {
        background-color: #6c63ff;
    }

        .btn-editar:hover {
            background-color: #574fd6;
        }

    .icono-boton {
        margin-right: 0.5rem;
    }

    .mensaje-cargando {
        text-align: center;
        font-size: 1rem;
        color: #aaaaaa;
        margin-top: 2rem;
    }
</style>

@code {
    [Parameter] public int Id { get; set; }
    private Usuario? usuario;

    protected override async Task OnInitializedAsync()
    {
        usuario = await UsuarioService.ObtenerPorId(Id);
    }
}
