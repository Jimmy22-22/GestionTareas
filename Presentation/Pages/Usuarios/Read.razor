@page "/usuarios/read/{Id:int}"
@inject UsuarioService UsuarioService
@inject NavigationManager Navigation

<h3 class="titulo-detalles">
    <i class="bi bi-eye-fill icono-titulo"></i> Detalles del Usuario
</h3>

@if (usuario != null)
{
    <div class="tarjeta-detalles p-4 shadow-sm">
        <h5 class="titulo-tarjeta"><i class="bi bi-person-fill icono-titulo-tarjeta"></i> @usuario.Nombre</h5>
        <p class="texto-detalles"><strong>Correo:</strong> @usuario.Correo</p>

        <div class="botones-accion mt-3">
            <a href="/usuarios" class="btn-volver">
                <i class="bi bi-arrow-left icono-boton"></i> Volver
            </a>
            <a class="btn-editar ms-2" href="/usuarios/edit/@usuario.Id">
                <i class="bi bi-pencil icono-boton"></i> Editar
            </a>
        </div>
    </div>
}
else
{
    <p class="mensaje-cargando">Cargando usuario...</p>
}

<style>
    .titulo-detalles {
        text-align: center;
        font-size: 1.5rem;
        font-weight: bold;
        color: #333;
        margin-bottom: 1.5rem;
    }

    .icono-titulo {
        color: #0d6efd;
        margin-right: 0.5rem;
    }

    .tarjeta-detalles {
        max-width: 500px;
        margin: 0 auto;
        background: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1), 0 1px 3px rgba(0, 0, 0, 0.06);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .titulo-tarjeta {
        font-size: 1.2rem;
        font-weight: bold;
        color: #333;
        margin-bottom: 1rem;
    }

    .icono-titulo-tarjeta {
        color: #0d6efd; 
        margin-right: 0.5rem;
    }

    .texto-detalles {
        font-size: 0.9rem;
        color: #555;
        margin-bottom: 0.75rem;
    }

    .botones-accion {
        display: flex;
        gap: 1rem; 
    }

    .btn-volver {
        padding: 0.75rem 1.5rem;
        background-color: #6c757d; 
        color: #fff;
        font-size: 1rem;
        font-weight: bold;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .btn-volver:hover {
        background-color: #5a6268; 
    }

    .btn-editar {
        padding: 0.75rem 1.5rem;
        background-color: #0d6efd; 
        color: #fff;
        font-size: 1rem;
        font-weight: bold;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .btn-editar:hover {
        background-color: #0b5ed7;
    }

    .icono-boton {
        margin-right: 0.5rem;
    }

    .mensaje-cargando {
        text-align: center;
        font-size: 1rem;
        color: #555;
    }
</style>

@code {
    [Parameter] public int Id { get; set; }
    private Usuario? usuario;

    protected override async Task OnInitializedAsync()
    {
        usuario = await UsuarioService.ObtenerPorId(Id);
    }
}
